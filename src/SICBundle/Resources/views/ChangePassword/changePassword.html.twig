{% extends "base_login.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
    <div class="page-header">
        <h3 class="text-center"><i class="fa fa-asterisk fa-fw"></i> Cambio de Contraseña Personal</h3>
    </div>
    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
        {{ form_row(form.current_password, {'label':'Contraseña Actual'}) }}
        {{ form_row(form.plainPassword.first, {'label':'Nueva Contraseña'}) }}
        {{ form_row(form.plainPassword.second, {'label':'Repetir Nueva Contraseña'}) }}
        
        <div class="row">
            <div class="col-lg-4 col-sm-4 col-xs-12 col-lg-offset-4">
                <input class="btn btn-success btn-block" type="submit" value="Guardar Nueva Contraseña" />
            </div>
        </div>
    {{ form_end(form) }}

{% endblock body %}
