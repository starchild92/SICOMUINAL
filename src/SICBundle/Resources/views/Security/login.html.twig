{% extends "base_login.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Inicio de Sesión{% endblock %}
{% block javascripts %}
<script type="text/javascript">
	$('#username').focus();
</script>
{% endblock %}
{% block body %}
<div class="row">
	<div class="col-lg-5 col-sm-8 col-xs-12 offer" style="float: none; margin: 117px auto; text-align: center;">
		<p class="text-center">
			<img src="{{ asset('images/logo.png') }}" alt="logo" class="img-responsive" style="float: none; margin: 0px auto; text-align: center;">
		</p>
		
		{% if error %}
		    <div class="alert alert-danger alert-dismissible" role="alert">
		    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		    <br>
		{% endif %}

		<form action="{{ path("fos_user_security_check") }}" method="post" class="form-group">
			
			<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

			<div class="form-group">
			<div class="input-group input-block-level">
			  <span class="input-group-addon" id="basic-addon3"><i class="fa fa-user fa-fw"></i></span><input type="text" id="username" class="form-control input-md" aria-describedby="basic-addon3" name="_username" value="{{ last_username }}" placeholder="Nombre de Usuario" required="required">
			</div></div>
			
			<div class="form-group">
			<div class="input-group input-block-level">
			  <span class="input-group-addon" id="basic-addon2"><i class="fa fa-key fa-fw"></i></span><input class="form-control input-md" placeholder="Contraseña" aria-describedby="basic-addon2" type="password" id="password" name="_password" required="required">
			</div></div>

			<input class="btn btn-primary btn-md btn-block" type="submit" id="_submit" name="_submit" value="INCIAR SESIÓN" />
			
		</form>
		<small><a class="btn btn-sm button-line" href="{{ path('fos_user_resetting_request') }}">¿No recuerdas tu contraseña?</a></small>
	</div>

	{# <div class="col-lg-4 col-sm-8 col-xs-12 offer" style="float: none; margin: 0px auto; text-align: center;">
		<p>Desarrollado por Luis Pérez</p>
		<div class="col-lg-12"><a href="https://www.linkedin.com/in/lapv1992" target="__new"><i class="fa fa-linkedin-square fa-2x"></i></a> <a href="https://twitter.com/lapv20" target="__new"><i class="fa fa-twitter fa-2x"></i></a></div>
	</div> #}
</div>
{% endblock body %}
