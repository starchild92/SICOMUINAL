{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="text-center">Datos del Grupo Familiar</h2>
    <hr>
    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-primary">
                <div class="panel-body">
                    {{ form_row(edit_form.apellidos) }}
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-body">
                    {{ form_row(edit_form.tiempoResidencia) }}
                    {{ form_row(edit_form.sector) }}
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-body">
                    {{ form_row(edit_form.direccion) }}
                    {{ form_row(edit_form.numeroCasa) }}
                </div>
            </div>
        </div>
    </div>
        <input class="btn btn-primary btn-block" type="submit" value="Guardar Cambios en Información Económica y Regresar a la Planilla" />
    {{ form_end(edit_form) }}
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('.ui.dropdown')
              .dropdown();
        })
    </script>
{% endblock %}