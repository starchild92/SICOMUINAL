{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery-ui.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery-ui.structure.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery-ui.theme.css') }}">
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-xs-6"><small class="text-info">ant. Jefe Grupo Familiar</small></div>
        <div class="col-xs-6 text-right"><small class="text-info">sig. Agregar Miembros</small></div>
    </div>
    <div class="progress">
      <div class="progress-bar active progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
        Paso 2 de 9
      </div>
    </div>

    <h2>Datos del Grupo Familiar</h2>
    
    {{ form_start(form) }}
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-body">
                    {{ form_row(form.apellidos) }}
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-body">
                    {{ form_row(form.avenida) }}
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-body">
                    {{ form_row(form.calle) }}
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-body">
                    {{ form_row(form.numeroCasa) }}
                </div>
            </div>
        </div>
    </div>
        <input class="btn btn-primary btn-block" type="submit" value="Registrar Datos del Grupo Familiar y Continuar" />
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/jquery-ui.js') }}"></script>
    <script>
        $(document).ready(function() {
            var calles = [{% for item in grupos %}'{{ item.calle }}',{% endfor %}];
            var avenidas = [{% for item in grupos %}'{{ item.avenida }}',{% endfor %}];
            $( "#grupo_familiar_calle" ).autocomplete({
                source: calles,
                minLength: 0,
            });
            $( "#grupo_familiar_avenida" ).autocomplete({
                source: avenidas,
                minLength: 0,
            });
        })
    </script>
{% endblock %}