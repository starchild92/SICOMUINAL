{% block body %}
    <h2 class="text-center">Situaci贸n Econ贸mica</h2>
    <hr>
    <div class="row">
    {{ form_start(edit_form) }}
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-body">
                    {{ form_row(edit_form.dondeTrabaja) }}
