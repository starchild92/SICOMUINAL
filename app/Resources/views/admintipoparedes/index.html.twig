{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-primary">
        <div class="panel-heading">Tipo de Paredes</div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
            {% for adminTipoParede in adminTipoParedes %}
                <tr>
                    <td>{{ adminTipoParede.nombre }}</td>
                    <td>
                        <a id="forModalEdit" href="{{ path('configurable_tipo_paredes_edit', { 'id': adminTipoParede.id }) }}"><i class="fa fa-edit"></i> Editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('configurable_tipo_paredes_new') }}" id="forModal"><i class="fa fa-plus"></i> Agregar Nuevo Tipo de Paredes</a>
{% endblock %}
