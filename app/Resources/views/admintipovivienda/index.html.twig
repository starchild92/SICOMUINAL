{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-primary">
        <div class="panel-heading">Tipos de Viviendas</div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
            {% for adminTipoVivienda in adminTipoViviendas %}
                <tr>
                    <td>{{ adminTipoVivienda.nombre }}</td>
                    <td>
                        <a id="forModalEdit" href="{{ path('configurable_tipo_vivienda_edit', { 'id': adminTipoVivienda.id }) }}"><i class="fa fa-edit"></i> Editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('configurable_tipo_vivienda_new') }}" id="forModal"><i class="fa fa-plus"></i> Agregar Nuevo Tipo</a>
{% endblock %}
