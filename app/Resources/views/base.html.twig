<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
		<title>{% block title %}Sistema de Información Comunal{% endblock %}</title>
		
		{% block stylesheets %}{% endblock %}

		<link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.css') }}">
		{# <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap-theme.css') }}"> #}
		<link rel="stylesheet" type="text/css" href="{{ asset('css/darkly-bootstrap.css') }}">
		<link rel="stylesheet" type="text/css" href="{{ asset('css/estilos.css') }}">
		<link rel="stylesheet" type="text/css" href="{{ asset('css/font-awesome.css') }}">
		<link rel="stylesheet" type="text/css" href="{{ asset('css/ie10-viewport-bug-workaround.css') }}">
		
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
	</head>
	<body>
		<!-- Fixed navbar -->
		<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container-fluid">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="{{ path('sic_homepage') }}"><img src="{{ asset('images/logo.png') }}" alt="logo" class="img-responsive"></a>
				</div>
				<div id="navbar" class="navbar-collapse collapse">

					<ul class="nav navbar-nav navbar-right">
						<li><a href="{{ path('sic_homepage') }}" class="btn-primary"><i class="fa fa-home fa-lg"></i><span class="visible-xs">Página Inicio</span></a></li>

						<li class="dropdown">
							<a href="#" class="dropdown-toggle btn-default" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">CRUDs <span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="{{ path('consejocomunal_index') }}">Consejo Comunal</a></li>
								<li><a href="{{ path('comunidades_index') }}">Comunidades</a></li>
								
								<li><a href="{{ path('usuarios_index') }}">Usuarios</a></li>
								<li><a href="{{ path('personas_index') }}">Personas</a></li>
								<li><a href="{{ path('grupofamiliar_index') }}">Grupo Familiar</a></li>
								<li><a href="{{ path('jefegrupofamiliar_index') }}">Jefe Grupo Familiar</a></li>
								<li><a href="{{ path('situacioneconomica_index') }}">Situación Ecónomica</a></li>
								<li><a href="{{ path('situacionvivienda_index') }}">Situación Vivienda</a></li>
								<li><a href="{{ path('situacionsalud_index') }}">Situación Salud</a></li>
								<li><a href="{{ path('situacionservicios_index') }}">Situación Servicios</a></li>
								<li><a href="{{ path('participacioncomunitaria_index') }}">Participación Comunitaria</a></li>
								<li><a href="{{ path('situacioncomunidad_index') }}">Situación Comunitaria</a></li>
								<li><a href="{{ path('planillas_index') }}">Planillas</a></li>
							</ul>
						</li>

						<li class="dropdown">
							<a href="#" class="dropdown-toggle btn-default" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administar <span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="{{ path('sic_administacion_entidades') }}">Datos Consejo Comunal</a></li>
								<li><a href="{{ path('usuarios_index') }}">Usuarios del Consejo</a></li>
								<li><a href="{{ path('sic_administacion_parametros_planilla') }}">Parámetros Planilla</a></li>
							</ul>
						</li>

						<li class="dropdown">
							<a href="#" class="dropdown-toggle btn-default" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Perfil <span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a type="button" href="{{ path('fos_user_profile_show') }}">{{ app.user.primerNombre }} {{ app.user.primerApellido }}</a></li>
								<li><a href="{{ path('fos_user_profile_edit') }}">Editar perfil</a></li>
								<li><a href="{{ path('fos_user_profile_show') }}">Ver perfil</a></li>
							</ul>
						</li>

						<li><a class="btn-danger" href="{{ path('fos_user_security_logout') }}" data-toggle="tooltip" data-placement="bottom" title="Cerrar sesión"><i class="fa fa-power-off fa-lg"></i>  <span class="visible-xs">Cerrar Sesión</span></a></li>
					</ul>
				</div><!--/.nav-collapse -->
			</div>
		</nav>

		<div class="container-fluid">
			{% block body %}{% endblock %}
		</div> <!-- /container -->

		<script src="{{ asset('js/jquery2.1.4.js') }}"></script>
		<script src="{{ asset('js/bootstrap.js') }}"></script>
		<script src="{{ asset('js/ie10-viewport-bug-workaround.js') }}"></script>
		<script>
			$(function () {
				$('[data-toggle="tooltip"]').tooltip()
			})
		</script>
		{% block javascripts %}{% endblock %}
	</body>
</html>
