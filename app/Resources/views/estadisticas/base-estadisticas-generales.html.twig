{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        table .dataTable {
            clear: both;
            margin-top: 6px !important;
            margin-bottom: 0px !important;
        }
        .table-bordered { 
            border-top: 1px solid #DDD !important;
            border-bottom: none !important;
            border-left: none !important;
            border-right: none !important;
        }
        .panel-title { margin-top: 6px !important; }
        .panel-title{
            border-bottom: 1px solid #ddd;
            margin-bottom: 2px;
            padding-bottom: 6px;
            text-transform: uppercase;
        }
        .panel-body {
            padding-left: 6px !important;
            padding-right: 6px !important;
            padding-bottom: 6px !important;
            padding-top: 0px !important;
        }
        .list-group-item-text{ font-size: 0.9em; }
        .label{
            font-weight: normal !important;
            display: inline-block !important;
        }
        h4.bottom-line {
            border-bottom: 1px solid #ddd;
            margin-bottom: 2px;
        }
    </style>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/packery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('datatables/datatables.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('.row.grid').packery({ itemSelector: 'div[class*="col-"', });
            dataTable = $('table.table').DataTable({
                "aaSorting": [[ 1, "desc" ]],
                "language": {
                    "url": "{{ asset('datatables/espanol.js') }}"
                },
                "dom": "t",
                "paging": false,
            });
        });
    </script>
{% endblock %}