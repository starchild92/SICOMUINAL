{% embed 'estadisticas/base-estadisticas-generales.html.twig' %}
	
	{% block body %}
	<div class="row">
		{% include 'estadisticas/menu-opciones-estadisticas-generales.html.twig' %}

		<div class="col-lg-9 col-sm-9">
			<h4 class="text-center text-info">Estadísticas Generales - Personas Comunidad <i class="fa fa-bar-chart fa-sm pull-left"></i></h4>
			<hr>
			<div class="row grid">
				<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					<div class="panel panel-primary">
						<p class="panel-title text-center negritas">Pensionados - Jefes de Grupos Familiares</p>
						{% if personas.stat_pensionados_jgf|length == 0 %} <p class="text-center">No se encontró alguno</p> {% endif %}
						{% for object in personas.stat_pensionados_jgf %}
							{% if object.quienes|length > 0 %}
							<div class="panel-body">
								<h4 class="bottom-line">{{object.quienes|length}} Respondieron "{{ object.pensionados }}"</h4>
								{% for jgf in object.quienes %}
								<a class="label label-primary" target="_blank" href="{{ path('jefegrupofamiliar_show', {'id' : jgf.id }) }}">{{ jgf.nombreyapellido() }} ({{ jgf.pensionadoInstitucion }}) <i class="fa fa-external-link"></i></a>
								{% endfor %}
							</div>
							{% endif %}
						{% endfor %}
					</div>
				</div>
				<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					<div class="panel panel-success">
						<p class="panel-title text-center negritas">Pensionados - Personas de la Comunidad</p>
						{% if personas.stat_pensionados_p|length == 0 %} <p class="text-center">No se encontró alguno</p>{% endif %}
						{% for object in personas.stat_pensionados_p %}
							{% if object.quienes|length > 0 %}
							<div class="panel-body">
								<h4 class="bottom-line">{{object.quienes|length}} Respondieron "{{ object.pensionados }}"</h4>
								{% for p in object.quienes %}
								<a class="label label-success" target="_blank" href="{{ path('personas_show', {'id' : p.id }) }}">{{ p.nombreyapellido() }} ({{ p.pensionadoInstitucion }}) <i class="fa fa-external-link"></i></a>
								{% endfor %}
							</div>
							{% endif %}
						{% endfor %}
					</div>
				</div>

			</div>
		</div>
	</div>
	{% endblock %}
{% endembed %}