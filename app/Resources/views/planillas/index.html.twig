                <td>{{ planilla.situacionVivienda.id }}</td>
                <td>{{ planilla.situacionSalud.id }}</td>
                <td>{{ planilla.situacionServicios.id }}</td>
                <td>{{ planilla.participacionComunitaria.id }}</td>
                <td>{{ planilla.situacionComunidad.id }}</td>
                <td>
                    <a href="{{ path('planillas_show', { 'id': planilla.id }) }}">show</a>
