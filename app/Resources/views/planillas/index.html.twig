{% block body %}
    <h1>Registros: "Estudio Demogr√°fico y Socioeconomico"</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Empadronador</th>
                <th>Jefegrupofamiliar</th>
                <th>Miembrosgrupofamiliar</th>
                <th>Situacioneconomica</th>
                <th>Situacionvivienda</th>
