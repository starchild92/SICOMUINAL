{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('datatables/datatables.min.css') }}"/>
    <style>
        .toolbar { float: left; }
    </style>
{% endblock %}
{% block body %}
    <table id="dataTable" class="table table-striped table-hover table-condensed">
        <thead class="thead-info">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cédula</th>
                <th>Profesión</th>
                <th>Edad</th>
                <th><i class="fa fa-cogs"></i></th>
            </tr>
        </thead>
        <tbody>
            {% for item in personas %}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{item.nombre}} {% if item.isJGF() %}<span class="label label-default">JGF</span>{% endif %}</td>
                <td>{{item.apellido}}</td>
                <td>{{item.cedula}}</td>
                <td>{{item.profesion}}</td>
                <td>{{item.edad_fmt}} años</td>
                <td>
                    {% if item.isJGF() %}
                        <a href="{{ path('jefegrupofamiliar_show',{ 'id' : item.id }) }}"><i class="fa fa-user"></i> Detalles</a></td>
                    {% else %}
                        <a href="{{ path('personas_show',{ 'id' : item.id }) }}"><i class="fa fa-user"></i> Detalles</a></td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('datatables/datatables.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            dataTable = $('#dataTable').DataTable({
                    "dom": "<'toolbar'>frtip",
                    // 'fixedHeader': true,
                    "pageLength": 25,
                    "bLengthChange": false,
                    "info": true,
                    'stateSave': true,
                    'pagingType': 'full_numbers',
                    "language": {
                        "url": "{{ asset('datatables/espanol.js') }}"
                    }
                });
            $('div.toolbar').html("<h2>Agenda de la Comunidad <small> conozca a los miembros de sus comunidad.</small></h2>");
        });
    </script>
{% endblock %}