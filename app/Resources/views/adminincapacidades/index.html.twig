{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-primary">
        <div class="panel-heading">Incapacidades</div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    {# <th>Id</th> #}
                    <th>Incapacidad</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
            {% for adminIncapacidade in adminIncapacidades %}
                <tr>
                    {# <td><a href="{{ path('configurable_incapacidades_show', { 'id': adminIncapacidade.id }) }}">{{ adminIncapacidade.id }}</a></td> #}
