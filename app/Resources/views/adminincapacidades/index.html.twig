                    <td>
                        <a id="forModalEdit" href="{{ path('configurable_incapacidades_edit', { 'id': adminIncapacidade.id }) }}"><i class="fa fa-edit fa-fw"></i> Editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
        
    <a class="btn btn-primary" href="{{ path('configurable_incapacidades_new') }}" id="forModal"><i class="fa fa-plus fa-fw"></i> Agregar Nueva</a>
    
{% endblock %}
