{% extends 'base.html.twig' %}

{% block body %}
    <h1>Detalles de la Noticia</h1>
    <hr>
    <div class="row">
        <div class="col-sm-10">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="text-right">{% if noticium.visibilidad %} <i class="fa fa-eye"></i> Noticia visible para todos. {% else %} <i class="fa fa-eye-slash"></i> Noticia oculta para todos. {% endif %}</span>
                </div>
                <div class="panel-body">
                    <h3>{{ noticium.titulo }} <small class="negritas"> por {{ noticium.usuario.nombreyapellido() }}</small></h3>
                    <hr class="little">
                    <p>{{ noticium.cuerpo }}</p>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-6"><span class="negritas">Publicado:</span> {% if noticium.fechaPub %}{{ noticium.fechaPubyhora() }}{% endif %}</div>
                        <div class="col-sm-6 text-right"><span class="negritas">Modificado el:</span> {{ noticium.fechayhora() }}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <a class="btn btn-block btn-default" href="{{ path('noticia_index') }}">Ver todas</a>
            <a class="btn btn-block btn-default" href="{{ path('noticia_edit', { 'id': noticium.id }) }}"> <i class="fa fa-edit"></i> Modificar detalles</a>
            <hr class="little">
            {{ form_start(delete_form) }}
                <input class="btn btn-danger btn-block" type="submit" value="Eliminar Noticia">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
