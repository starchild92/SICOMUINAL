{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-primary">
        <div class="panel-heading">Preguntas Participación Comunitaria</div>
        <table class="table-striped table table-bordered">
            <thead>
                <tr>
                    <th>Interrogante</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
            {% for adminPregunta in adminPreguntas %}
                <tr>
                    <td>{{ adminPregunta.pregunta }}</td>
                    <td>
                        <a id="forModalEdit" href="{{ path('configurables_preguntas_edit', { 'id': adminPregunta.id }) }}"><i class="fa fa-edit"></i> Editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('configurables_preguntas_new') }}" id="forModal"><i class="fa fa-plus"></i> Agregar Nueva Preguntas Participación Comunitaria</a>
{% endblock %}
