{% block body %}
    <div class="row">
        <div class="col-xs-6"><small class="text-info">ant. Situaci贸n Vivienda</small></div>
        <div class="col-xs-6 text-right"><small class="text-info">sig. Situaci贸n Servicios</small></div>
    </div>
    <div class="progress">
      <div class="progress-bar active progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
        Paso 6 de 9
      </div>
    </div>

    <h2>Situaci贸n Salud</h2>

    {{ form_start(form) }}
        <div class="row">
            <div class="col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-body">{{ form_row(form.padecencia) }}</div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-body">{{ form_row(form.ayudaEspecial) }}</div>
