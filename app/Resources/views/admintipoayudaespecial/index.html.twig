{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-primary">
        <div class="panel-heading">Tipo de Ayuda Especial</div>
        <table class="table-bordered table table-stripped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
            {% for adminTipoAyudaEspecial in adminTipoAyudaEspecials %}
                <tr>
                    <td>{{ adminTipoAyudaEspecial.nombre }}</td>
                    <td>
                        <a id="forModalEdit" href="{{ path('configurable_tipo_ayuda_especial_edit', { 'id': adminTipoAyudaEspecial.id }) }}"><i class="fa fa-edit"></i> Editar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('configurable_tipo_ayuda_especial_new') }}" id="forModal"><i class="fa fa-plus"></i> Agregar Nuevo</a>
{% endblock %}
